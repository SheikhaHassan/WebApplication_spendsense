@page "/SignUp"
@model WebApplication_spendsense.Pages.SignUpModel

@{
    ViewData["Title"] = "SignUp";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>


<body>
   
    

    <div class="login-container d-flex align-items-center justify-content-center">
        <div class="login-box">
            <div class="text-center mb-4">
                <img src="@Url.Content("~/logo.png")" alt="Logo" class="logo">
                <h3 class="login-title">Create Account</h3>
            </div>
            <form method="post">
               
                <!-- Name Input Group -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                        <input type="text" asp-for="proprties.Username" name="username" class="form-control" placeholder="Username" required>
                        <span class="text-danger" asp-validation-for="proprties.Username"></span>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
                    </div>
                        <input type="text" asp-for="proprties.Name" name="fullname" class="form-control" placeholder="Full Name" required>
                        <span class="text-danger" asp-validation-for="proprties.Name"></span>
                    </div>

                <!-- Email Input Group -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    </div>
                        <input type="email" asp-for="proprties.Email" name="email" class="form-control" placeholder="Email address" required>
                        <span class="text-danger" asp-validation-for="proprties.Email"></span>
                    </div>

                <!-- Password Input Group -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                        <input type="password" asp-for="proprties.Password" name="password" class="form-control" placeholder="Password" required>
                        <span class="text-danger" asp-validation-for="proprties.Password"></span>
                    </div>

                <!-- Sign Up Button -->
                    <button type="submit" class="btn btn-primary btn-block mt-3">Sign Up</button>

                <div class="text-center mt-3">
                    <p>Already have an account? <a style="color: rgb(192, 209, 219);" asp-page="/Login">Login</a></p>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </div>


   
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
