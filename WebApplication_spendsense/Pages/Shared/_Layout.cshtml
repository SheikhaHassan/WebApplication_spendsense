<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication_spendsense</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> 
    
    <link rel="stylesheet" href="~/WebApplication_spendsense.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
       <nav class="navbar navbar-expand-sm">
    <div class="container">
        <a class="navbar-brand" asp-area="" asp-page="/Index">Spendsense</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                </li>
                <li class="nav-item">
                            <a class="nav-link text-dark" href="/Dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/BudgetSetup">Budget Setup</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/AddExpense">Expense Tracker</a>
                </li>
                <li class="nav-item">
                            <a class="nav-link text-dark" href="/Report">Report Page</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

    </header>
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()

        </main>
    </div>

     <!-- Footer -->
 <footer class="footer text-center">
     <p class="footer-text">&copy; 2024 - SpendSense</p>
 </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>