@{
    ViewData["Title"] = "Update Category";
}

<h2>@ViewData["Title"]</h2>

<!-- Display success or error message -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<form method="post" asp-action="Update">
    <div class="form-group">
        <label for="CategoryName">Category Name</label>
        <input type="text" class="form-control" id="CategoryName" name="CategoryName" placeholder="Enter category name" required />
    </div>

    <div class="form-group">
        <label for="AmountSpent">Amount Spent</label>
        <input type="number" step="0.01" class="form-control" id="AmountSpent" name="AmountSpent" placeholder="Enter amount spent" required />
    </div>

    <button type="submit" class="btn btn-primary">Update Category</button>
</form>

<hr>

<!-- Category Deletion -->
<h3>Delete Category</h3>
<form method="post" asp-action="Delete">
    <div class="form-group">
        <label for="DeleteCategoryName">Category Name</label>
        <input type="text" class="form-control" id="DeleteCategoryName" name="categoryName" placeholder="Enter category name to delete" required />
    </div>

    <button type="submit" class="btn btn-danger">Delete Category</button>
</form>

<hr>

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
