@model budgetManagement.Models.DashboardSummary

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h3 class="text-center">Welcome, @ViewBag.UserName!</h3>
        <p>Your role: <span class="badge badge-info">@ViewBag.UserRole</span></p>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Income</h5>
                        <p class="card-text display-4">@Model.TotalIncome.ToString("N2") OMR</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Expenses</h5>
                        <p class="card-text display-4">@Model.TotalExpense.ToString("N2") OMR</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Remaining Budget</h5>
                        <p class="card-text display-4">@Model.RemainingBudget?.ToString("N2") OMR</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-3">
            <a href="@Url.Action("BudgetSetup", "Home")" class="btn btn-primary">Budget Setup</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
